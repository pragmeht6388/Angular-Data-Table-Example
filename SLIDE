pauseSlider() {
  this.autoPlay = false;
}

resumeSlider() {
  this.autoPlay = true;
}
<div 
  class="car-detail-image-container"
  (mouseenter)="pauseSlider()"
  (mouseleave)="resumeSlider()"
>
public showSlides() {
  setTimeout(() => {
    if (this.autoPlay) {
      this.slideLoop();
      this.displaySlide(this.slideIndex - 1);
    }
    this.showSlides();
  }, 8000);
}
