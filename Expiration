import { Component, VERSION } from '@angular/core';

@Component({
  selector: 'my-app',
  templateUrl: './app.component.html',
  styleUrls: ['./app.component.css'],
})
export class AppComponent {
  currentDate: Date = new Date();
  expiredDate: Date = new Date();

  constructor() {
    this.expiredDate.setDate(this.currentDate.getDate() + 1);
  }

  get isExpired(): boolean {
    return this.currentDate < this.expiredDate;
  }
}
Expiration 


//html code
<div>
  <h2>Current Date: {{ currentDate | date }}</h2>
  <h2>Expired Date: {{ expiredDate | date }}</h2>
  <div *ngIf="isExpired">
    <p>This content will disappear after the expiration date</p>
  </div>
</div>
